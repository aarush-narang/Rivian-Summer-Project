{
  "root": true,
  "parser": "@babel/eslint-parser",
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:jsx-a11y/recommended",
    "plugin:react-hooks/recommended",
    "airbnb"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": [],
  "rules": {
    "linebreak-style": "off",
    "indent": ["error", 4],
    "react/react-in-jsx-scope": "off",
    "react/jsx-indent": ["error", 4],
    "quotes": "off",
    "max-len": "off",
    "import/prefer-default-export": "off",
    "no-plusplus": "off",
    "no-unused-vars": "warn"
  }
}
